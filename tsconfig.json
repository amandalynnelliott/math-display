{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es2015"
    ],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
